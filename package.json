{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "word-count",
  "title": "Word Count",
  "description": "Count the number of characters, words, sentences, and paragraphs in some text.",
  "icon": "word-count.png",
  "access": "public",
  "author": "itsmingjie",
  "contributors": [
    "koayon",
    "chrismessina"
  ],
  "pastContributors": [
    "danulqua"
  ],
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "count",
      "title": "Count",
      "subtitle": "Word Count",
      "description": "Count the number of characters, words, sentences, and paragraphs in some text.",
      "mode": "view",
      "keywords": [
        "word",
        "character",
        "sentence",
        "paragraph"
      ]
    },
    {
      "name": "count-screenshot",
      "title": "Count from Screenshot",
      "subtitle": "Word Count",
      "description": "Capture a screenshot and count words, characters, sentences, and paragraphs using OCR.",
      "mode": "no-view",
      "keywords": [
        "screenshot",
        "ocr",
        "word",
        "character",
        "sentence",
        "paragraph",
        "capture"
      ]
    }
  ],
  "preferences": [
    {
      "name": "ocrLanguage",
      "title": "OCR Language",
      "description": "Language for OCR text recognition",
      "type": "dropdown",
      "required": false,
      "label": "OCR Language",
      "default": "en",
      "data": [
        {
          "title": "English",
          "value": "en"
        },
        {
          "title": "Spanish",
          "value": "es"
        },
        {
          "title": "French",
          "value": "fr"
        },
        {
          "title": "German",
          "value": "de"
        },
        {
          "title": "Italian",
          "value": "it"
        },
        {
          "title": "Portuguese",
          "value": "pt"
        },
        {
          "title": "Chinese (Simplified)",
          "value": "zh-Hans"
        },
        {
          "title": "Chinese (Traditional)",
          "value": "zh-Hant"
        },
        {
          "title": "Japanese",
          "value": "ja"
        },
        {
          "title": "Korean",
          "value": "ko"
        },
        {
          "title": "Russian",
          "value": "ru"
        },
        {
          "title": "Arabic",
          "value": "ar"
        }
      ]
    },
    {
      "name": "playSound",
      "description": "Play camera shutter sound when capturing screenshots",
      "type": "checkbox",
      "required": false,
      "label": "Play screenshot sound",
      "default": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.6",
    "@raycast/utils": "^2.2.2",
    "react": "^19.2.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "js-yaml": "4.1.1"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish",
    "test": "jest"
  },
  "platforms": [
    "macOS",
    "Windows"
  ]
}
